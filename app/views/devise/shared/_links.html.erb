<div class="space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
  <% end %>

  <%# MVPでは使用しないためダミー条件で無効化しておく %>
  <%- if false && devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div>
      <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>

  <%# MVPでは使用しないためダミー条件で無効化しておく %>
  <%- if false && devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div>
      <%= link_to "確認メールを受信していませんか？", new_confirmation_path(resource_name), class: "text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>

  <%# MVPでは使用しないためダミー条件で無効化しておく %>
  <%- if false && devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div>
      <%= link_to "アカウントロック解除メールを受信していませんか？", new_unlock_path(resource_name), class: "text-gray-600 hover:text-gray-800" %>
    </div>
  <% end %>
</div>
