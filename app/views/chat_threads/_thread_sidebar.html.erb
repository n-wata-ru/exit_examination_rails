<!-- 左側: スレッド一覧 -->
<div class="w-1/4 bg-gray-100 border-r border-gray-300 overflow-y-auto hidden sm:block">
  <div class="p-4">
    <h2 class="text-xl font-bold mb-4">チャット履歴</h2>
    
    <% if chat_threads.any? %>
      <ul class="space-y-2">
        <% chat_threads.each do |thread| %>
          <li class="flex relative p-3 <%= current_thread&.id == thread.id ? 'bg-gray-200' : 'bg-white hover:bg-gray-200' %>">
            <%= link_to thread.title, chat_thread_path(thread), 
                class: "flex flex-1 rounded #{current_thread&.id == thread.id ? 'bg-gray-200' : 'bg-white hover:bg-gray-200'}" %>
            <%# スレッド削除機能 %>
						<%# <div class="flex justify-end" data-controller="dropdown">
							<button type="button" data-action="click->dropdown#toggle" class="flex items-center text-gray-700 hover:text-gray-900 cursor-pointer">
									･･･
							</button>
              <!-- ドロップダウンメニュー -->
							<ul data-dropdown-target="menu" class="hidden absolute right-0 top-10 bg-white border border-gray-200 rounded shadow-lg">
								<li>
									<%= button_to "削除", chat_thread_path(current_thread&.id), 
										method: :delete, 
										data: { confirm: "このスレッドを削除してもよろしいですか？" },
										class: "block w-full px-4 py-2 text-gray-700 hover:bg-gray-100 text-left cursor-pointer" %>
								<%# </li>
							</ul>
            </div> %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-gray-500 text-center mt-8">まだスレッドがありません</p>
    <% end %>
  </div>
</div>
