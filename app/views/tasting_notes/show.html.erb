<%= render 'shared/header_detail', title: '評価詳細', show_back_button: true %>
<div class="min-h-screen bg-[#efefef] p-4">
  <div class="w-full max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6">

      <div class="mb-4">
      <%= link_to "→ コーヒー豆の詳細へ", coffee_bean_path(@tasting_note.coffee_bean), 
        class: "text-[#be9d79] hover:text-[#a07c5a] text-sm" %>
      </div>
      <!-- コーヒー豆名 -->
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800 mb-2"><%= @tasting_note.coffee_bean.name %></h1>
      </div>

      <!-- 抽出方法 -->
      <% if @tasting_note.brew_method.present? %>
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-500 mb-1">抽出方法</h3>
          <p class="text-gray-900"><%= @tasting_note.brew_method %></p>
        </div>
      <% end %>

      <!-- 購入店舗 -->
      <% if @tasting_note.shop.present? %>
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-500 mb-1">購入店舗</h3>
          <div class="bg-[#efefef] p-4 rounded-lg">
            <p class="text-gray-900 font-medium"> <%= @tasting_note.shop.name %></p>
            <% if @tasting_note.shop.address.present? %>
              <p class="text-gray-600 text-sm mt-1"><%= @tasting_note.shop.address %></p>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- 評価スコア -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">評価</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% if @tasting_note.preference_score.present? %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm font-medium text-gray-600 mb-2">好み度</p>
              <div class="flex items-center">
                <% (1..5).each do |i| %>
                  <span class="text-2xl <%= i <= @tasting_note.preference_score ? 'text-yellow-400' : 'text-gray-300' %>">★</span>
                <% end %>
                <span class="ml-2 text-gray-600"><%= @tasting_note.preference_score %>/5</span>
              </div>
            </div>
          <% end %>

          <% if @tasting_note.acidity_score.present? %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm font-medium text-gray-600 mb-2">酸味の強さ</p>
              <div class="flex items-center">
                <% (1..5).each do |i| %>
                  <span class="text-2xl <%= i <= @tasting_note.acidity_score ? 'text-yellow-400' : 'text-gray-300' %>">★</span>
                <% end %>
                <span class="ml-2 text-gray-600"><%= @tasting_note.acidity_score %>/5</span>
              </div>
            </div>
          <% end %>

          <% if @tasting_note.bitterness_score.present? %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm font-medium text-gray-600 mb-2">苦味の強さ</p>
              <div class="flex items-center">
                <% (1..5).each do |i| %>
                  <span class="text-2xl <%= i <= @tasting_note.bitterness_score ? 'text-yellow-400' : 'text-gray-300' %>">★</span>
                <% end %>
                <span class="ml-2 text-gray-600"><%= @tasting_note.bitterness_score %>/5</span>
              </div>
            </div>
          <% end %>

          <% if @tasting_note.sweetness_score.present? %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <p class="text-sm font-medium text-gray-600 mb-2">甘さ</p>
              <div class="flex items-center">
                <% (1..5).each do |i| %>
                  <span class="text-2xl <%= i <= @tasting_note.sweetness_score ? 'text-yellow-400' : 'text-gray-300' %>">★</span>
                <% end %>
                <span class="ml-2 text-gray-600"><%= @tasting_note.sweetness_score %>/5</span>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- 風味メモ -->
      <% if @tasting_note.taste_notes.present? %>
        <div class="mb-6">
          <h3 class="text-sm font-medium text-gray-500 mb-1">風味メモ</h3>
          <p class="text-gray-900 whitespace-pre-wrap"><%= @tasting_note.taste_notes %></p>
        </div>
      <% end %>

      <!-- 登録日時 -->
      <div class="mb-6 text-sm text-gray-500">
        登録日時: <%= l(@tasting_note.created_at, format: :long) %>
      </div>

      <!-- アクションボタン -->
      <div class="flex gap-3 border-t border-gray-200 pt-6 items-center justify-between">
        <%= link_to "編集", edit_coffee_bean_tasting_note_path(@tasting_note.coffee_bean, @tasting_note),
            class: "bg-gray-200 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 text-center" %>

        <%= button_to coffee_bean_tasting_note_path(@tasting_note.coffee_bean, @tasting_note), 
            method: :delete,
            data: { turbo_confirm: "本当に削除しますか？" },
            class: "text-red-600 hover:text-red-800 transition flex items-center cursor-pointer" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
