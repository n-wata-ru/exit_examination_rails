<header class="bg-white border-b border-gray-200 sticky top-0 z-10 w-full min-h-[48px]">
  <div class="flex items-center justify-between px-4 py-3">
    <!-- 左：戻るボタン -->
    <div class="flex-1">
      <% if @coffee_bean&.persisted? %>
        <%= link_to coffee_beans_path, class: "flex items-center text-gray-700 hover:text-gray-900" do %>
          <svg class="w-6 h-6 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
        <% end %>
      <% end %>
    </div>

    <!-- 中央：タイトル（オプション） -->
    <div class="flex-1 text-center">
      <h1 class="text-sm font-bold text-gray-800"><%= title %></h1>
    </div>

    <!-- 右：削除ボタン -->
    <div class="flex-1 flex justify-end">
      <% if @coffee_bean&.persisted? %>
        <%= button_to coffee_bean_path(@coffee_bean), 
            method: :delete,
            data: { turbo_confirm: "本当に削除しますか？" },
            class: "text-red-600 hover:text-red-800 transition flex items-center" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                  d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
          </svg>
        <% end %>
      <% end %>
    </div>
  </div>
</header>
