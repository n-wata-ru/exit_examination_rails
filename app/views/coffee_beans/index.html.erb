<%= render 'shared/header_detail', title: '登録一覧', show_logout_button: true %>
<div class="min-h-screen bg-[#efefef] p-4 relative">
  <div class="w-full max-w-4xl mx-auto">

    <% if @coffee_beans.empty? %>
      <!-- データがない場合 -->
      <p class="text-gray-600">まだ登録がありません。<br>
      投稿するボタンから、購入したコーヒーを登録してください。</p>
    <% else %>
      <!-- コーヒー豆リスト -->
      <div class="grid grid-cols-1 gap-6">
        <% @coffee_beans.each do |coffee_bean| %>
            <div class="bg-white rounded-lg hover:shadow-lg transition duration-200">
              <%= link_to coffee_bean_path(coffee_bean), class: "grid grid-cols-[100px_1fr_40px] items-center gap-4 py-4 pl-4" do %>
                <!-- サムネイル画像 -->
                <div class="w-[100px] h-[100px] flex items-center justify-center bg-gray-100 rounded-lg overflow-hidden">
                  <% if coffee_bean.image.attached? %>
                    <%= image_tag coffee_bean.image.variant(resize_to_fill: [100, 100]), class: "w-full h-full object-cover" %>
                  <% else %>
                    <%= image_tag "coffee_beans_image.png", class: "w-full h-full object-cover" %>
                  <% end %>
                </div>
                <!-- コーヒー情報 -->
                <div>
                  <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= coffee_bean.name %></h3>
                  <p class="text-gray-600 mb-1"><strong>産地:</strong> <%= coffee_bean.origin&.display_name || '産地情報なし' %></p>
                  <% if coffee_bean.variety.present? %>
                    <p class="text-gray-600 mb-1"><strong>品種:</strong> <%= coffee_bean.variety %></p>
                  <% end %>
                  <% if coffee_bean.process.present? %>
                    <p class="text-gray-600 mb-1"><strong>プロセス:</strong> <%= coffee_bean.process %></p>
                  <% end %>
                  <% if coffee_bean.roast_level.present? %>
                    <p class="text-gray-600 mb-1"><strong>焙煎度合い:</strong> <%= coffee_bean.roast_level %></p>
                  <% end %>
                  <% if coffee_bean.notes.present? %>
                    <p class="text-gray-600 mb-2"><strong>メモ:</strong> <%= truncate(coffee_bean.notes, length: 100) %></p>
                  <% end %>
                </div>
                <!-- 矢印 -->
                <div class="flex justify-center items-center w-[40px] h-full text-gray-700 hover:text-gray-900">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                </div>
              <% end %>
            </div>
        <% end %>
      </div>
    <% end %>
  </div>
      <!-- 投稿ボタン -->
    <div class="fixed bottom-10 right-5 flex justify-end">
      <%= link_to new_coffee_bean_path, 
          class: "w-16 h-16 bg-[#be9d79] text-white hover:opacity-75 rounded-full font-medium focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition duration-200 cursor-pointer flex items-center justify-center" do %>
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
        </svg>
      <% end %>
    </div>
</div>
