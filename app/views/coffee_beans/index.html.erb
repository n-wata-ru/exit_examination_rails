<div class="min-h-screen bg-gray-50 p-4 relative">
  <div class="w-full max-w-6xl mx-auto">
    <h1 class="font-bold text-4xl mb-6">投稿一覧</h1>

    <% if @coffee_beans.empty? %>
      <!-- データがない場合 -->
      <p class="text-gray-600">まだ登録がありません。<br>
      投稿するボタンから、購入したコーヒーを登録してください。</p>
    <% else %>
      <!-- コーヒー豆リスト -->
      <div class="grid grid-cols-1 gap-6">
        <% @coffee_beans.each do |coffee_bean| %>
          <div class="grid grid-cols-[1fr_40px] items-center bg-white border border-gray-300 rounded-lg py-4 pl-4 hover:shadow-lg transition duration-200">
            <div>
              <h3 class="text-xl font-semibold text-gray-800 mb-2"><%= coffee_bean.name %></h3>
              <p class="text-gray-600 mb-1"><strong>産地:</strong> <%= coffee_bean.origin&.display_name || '産地情報なし' %></p>
              <% if coffee_bean.variety.present? %>
                <p class="text-gray-600 mb-1"><strong>品種:</strong> <%= coffee_bean.variety %></p>
              <% end %>
              <% if coffee_bean.process.present? %>
                <p class="text-gray-600 mb-1"><strong>プロセス:</strong> <%= coffee_bean.process %></p>
              <% end %>
              <% if coffee_bean.roast_level.present? %>
                <p class="text-gray-600 mb-1"><strong>焙煎度合い:</strong> <%= coffee_bean.roast_level %></p>
              <% end %>
              <% if coffee_bean.notes.present? %>
                <p class="text-gray-600 mb-2"><strong>メモ:</strong> <%= truncate(coffee_bean.notes, length: 100) %></p>
              <% end %>
            </div>
            <%= link_to edit_coffee_bean_path(coffee_bean), class: "flex justify-center items-center w-[40px] h-full text-gray-700 hover:text-gray-900" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- 投稿ボタン -->
    <div class="mt-6 absolute bottom-10 right-10">
      <%= link_to "投稿する", new_coffee_bean_path, 
          class: "w-full bg-[#cccccc] hover:opacity-75 py-3 px-4 rounded-lg font-medium focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition duration-200 cursor-pointer text-center block" %>
    </div>
  </div>
</div>
