<%= form_with model: @coffee_bean, local: true do |f| %>
  <!-- エラーメッセージ -->
  <% if @coffee_bean.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h3 class="text-sm font-medium text-red-800 mb-2">
        <%= pluralize(@coffee_bean.errors.count, "件のエラー") %>が発生しました
      </h3>
      <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
        <% @coffee_bean.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <!-- コーヒー名 -->
    <div>
      <%= f.label :name, "コーヒー名", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :name, 
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200",
          placeholder: "例：エチオピア イルガチェフェ" %>
    </div>

    <!-- 産地 -->
    <div>
      <%= f.label :origin_id, "産地", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.collection_select :origin_id, @origins, :id, :country, 
          { prompt: "産地を選択してください" },
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>
    </div>

    <!-- 品種 -->
    <div>
      <%= f.label :variety, "品種", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :variety,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200",
          placeholder: "例：ゲイシャ、ティピカ、ブルボン、カトゥアイ、ロブスタ" %>
    </div>

    <!-- 処理方法 -->
    <div>
      <%= f.label :process, "処理・精製方法", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :process, 
          ["ナチュラル", "ウォッシュド", "ハニー", "アナエロビック", "カーボニックマセレーション", "スマトラ式", "その他"],
          { include_blank: "処理方法を選択してください" },
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>
    </div>

    <!-- 焙煎度 -->
    <div>
      <%= f.label :roast_level, "焙煎度", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :roast_level,
          ["浅煎り", "中煎り", "中深煎り", "深煎り"],
          { include_blank: "焙煎度を選択してください" },
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>
    </div>
    <!-- 焙煎度（詳細） -->
    <%# <%= f.select :roast_level,
        ["ライトロースト", "ミディアムロースト", "ハイロースト", "シティロースト", "フルシティロースト", "フレンチロースト", "イタリアンロースト"],
        { include_blank: "焙煎度を選択してください" },
        class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200" %>

    <!-- メモ -->
    <div>
      <%= f.label :notes, "メモ", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_area :notes, rows: 4,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200",
          placeholder: "コーヒーに関するメモや感想を記入してください" %>
    </div>

    <!-- ボタン -->
    <div class="flex gap-4">
      <%= link_to "キャンセル", coffee_beans_path,
          class: "flex-1 bg-gray-200 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200 text-center" %>
      <%= f.submit button_text, 
          class: "flex-1 bg-indigo-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-200 cursor-pointer" %>
    </div>
  </div>
<% end %>