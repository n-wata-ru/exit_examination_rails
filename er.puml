@startuml
entity Users {
  *id : bigint
  *name : string
  *email : string
  *encrypted_password : string
}

entity CoffeeBeans {
  *id : bigint
  *name : string
  *variety : string
  *process : string
  *roast_level : string
  *origin_id : bigint
  *notes : text
  *image : string
}

entity TastingNotes {
  *id : bigint
  *user_id : bigint
  *coffee_bean_id : bigint
  *shop_id : bigint
  *brew_method : string
  *preference_score : integer
  *acidity_score : integer
  *bitterness_score : integer
  *sweetness_score : integer
  *taste_notes : text
}

entity Shops {
  *id : bigint
  *name : string
  *address : string
  *url : string
  *notes : text
}

entity Origins {
  *id : bigint
  *country : string
  *region : string
  *farm_name : string
  *notes : text
}

Users ||--o{ TastingNotes
CoffeeBeans ||--o{ TastingNotes
Shops ||--o{ TastingNotes
Origins ||--o{ CoffeeBeans
@enduml
